<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <% if post.user %>
          <td> <%= link_to "#{post.user.email}", post.user %></td>
        <% else %>
           <td>Anonymous</td>
        <% end %>
        <td><%= link_to 'Show', post_path(post, page: @posts.current_page) %></td>
        <td><%= link_to 'Edit', edit_post_path(post, page: @posts.current_page) %></td>
        <td><%= link_to 'Destroy', post_path(post, page: @posts.current_page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="digg_pagination">
  <div>
    <%= page_entries_info @posts %>
  </div>
  <%= will_paginate @posts, container: false %>
</div>
<br>

<%= link_to 'New Post', new_post_path(page: @posts.current_page) %>
